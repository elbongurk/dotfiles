[push]
  default = simple
[color]
  ui = auto
[alias]
  aa = add --all  
  au = add --update
  ap = add --patch
  co = checkout
  ci = commit
  dt = difftool
  mt = mergetool
  st = status -sb
  cb = checkout -b
  db = branch -D
  mb = !git checkout master && git merge @{-1}
  up = !git fetch origin && git rebase origin/master
  pr = !hub pull-request
[core]
  excludesfile = ~/.gitignore
[commit]
  template = ~/.gitmessage
[include]
  path = .gitconfig.local
[gitsh]
  defaultCommand = status -sb
